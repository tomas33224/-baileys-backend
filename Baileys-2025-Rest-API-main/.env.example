# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=*

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/baileys_api?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# API Security
API_KEY_SECRET=your-api-key-secret-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp Configuration
WA_SESSION_TIMEOUT=300000
WA_MAX_RETRY_COUNT=3
WA_KEEP_ALIVE_INTERVAL=30000
WA_CONNECTION_TIMEOUT=20000

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (Optional - for session clustering)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Monitoring Configuration (Optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090
